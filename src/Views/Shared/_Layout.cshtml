<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Interceuticals</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/app.global.js" )" type="text/javascript"></script>


</head>
<body>
    @*<div class="navbar navbar-inverse navbar-fixed-top">*@
    <div class="container">
        <div style="padding:0 0 2% 80%;"><a href="tel:1-888-686-2698"><img src="~/Content/images/PhoneNumber.png" alt="CallUs" class="img-responsive" /></a></div>
        @*<div style="padding:0 0 2% 80%;" class="text-muted text-right">Order By Phone <br /> <h3>888-686-2698</h3></div>*@
        <div class="navbar navbar-inverse">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Interceuticals", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="~/about">About</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Betterwoman
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/product/betterwoman">Shop</a></li>
                            <li><a href="#">More Info</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Betterman
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/product/betterman">Shop</a></li>
                            <li><a href="#">More Info</a></li>
                        </ul>
                    </li>
                    <li><a href="~/contact">Contact Us</a></li>
                    <!-- Cart Menu-->
                    <li class="dropdown menu-large">
                        <a href="#" class="dropdown-toggle" id="dLabel" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-shopping-cart"></span> <span id="cartHeader">Cart</span><b class="caret"> </b></a>
                        <ul class="dropdown-menu">
                            <div class="col-sm-12 clearfix">
                                <div class="text-info" id="cartItems">Total</div>
                                <ul id="cart" class='clearfix'></ul><li class="divider"></li>
                                <div class="dropdown-toggle">
                                    <a href="#" class="simpleCart_empty btn btn-sm btn-danger" onclick="javascript:postJsonData('/cart/clear/' + _LOCAL_CART_VALUE)">Empty Cart</a>
                                    <a href="~/order" class="simpleCart_checkout btn btn-sm btn-success">Checkout</a>
                                </div>
                            </div>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            @Html.Partial("_Footer")
        </footer>
    </div>

    
   
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/toastr.min.js")
    
    @RenderSection("scripts", required: false)

    <!--More Toastr Options Info: http://codeseven.github.io/toastr/demo.html -->
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-top-center"
        }

        function emptyCart() {
            postJsonData('cart/clear/' + _LOCAL_CART_VALUE);
        }

        $().ready(function () {
            setCartTotals(_LOCAL_CART_VALUE);
        });
    </script>
</body>
</html>
