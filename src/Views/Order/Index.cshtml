
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-app="orderApp" ng-controller="orderCtrl">

    <h3>Order Details</h3>

    <table class="table">
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th></th>
        </tr>
        <tr ng-repeat="item in cartItems">

            <td>{{ item.ProductName }}</td>
            <td>${{ item.Price }}</td>
            <td><a href="#" ng-click="removeItemFromCart(item)">Remove</a></td>
        </tr>
    </table>

</div>
<div class="row">

    <form id="commentForm" method="get" action="" class="form-horizontal">
        <div id="rootwizard">
            <ul>
                <li><a href="#tab1" data-toggle="tab">Billing Info</a></li>
                <li><a href="#tab2" data-toggle="tab">Shipping Info</a></li>
                <li><a href="#tab3" data-toggle="tab">Payment</a></li>
            </ul>
            <div class="col-sm-9 tab-content">
                <div class="tab-pane" id="tab1">

                    <div class="col-sm-9 col-md-5 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">First Name</label>
                            <div class="col-md-8">
                                <input type="text" id="firstName" name="firstName" class="form-control" required>
                            </div>
                        </div>
                   </div>

                    <div class="col-sm-9 col-md-5 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Last Name</label>
                            <div class="col-md-8">
                                <input type="text" id="lastName" name="lastName" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9 col-md-5 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Billig Address</label>
                            <div class="col-md-8">
                                <input type="text" id="address" name="address" class="form-control" required>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane" id="tab2">
                    <div class="col-sm-9 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">First Name</label>
                            <div class="col-md-8">
                                <input type="text" id="firstNameShipping" name="firstNameShipping" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-9 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Last Name</label>
                            <div class="col-md-8">
                                <input type="text" id="lastNameShipping" name="lastNameShipping" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Shipping Address</label>
                            <div class="col-md-8">
                                <input type="text" id="shippingAddress" name="shippingAddress" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">State</label>
                            <div class="col-md-8">
                                <select name="ccType" id="ccType" class="form-control">
                                    <option selected="selected" value="0">Please Select</option>
                                    <option value="1">Alabama</option>
                                    <option value="2">Arkansas</option>
                                    <option value="3">Arizona</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab3">
                    <div class="col-sm-9 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Card Type</label>
                            <div class="col-md-8">
                                <select name="ccType" id="ccType" class="form-control">
                                    <option selected="selected" value="0">Please Select</option>
                                    <option value="1">Visa</option>
                                    <option value="2">Master Card</option>
                                    <option value="3">Discover</option>
                                    <option value="4">Amex</option>
                                 </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Credit Card Number</label>
                            <div class="col-md-8">
                                <input type="text" id="creditCard" name="creditCard" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9 col-lg-11">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Comments</label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="comments" name="comments"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                @*<ul class="pager wizard">*@
                    <div style="float:right">
                        <input type='button' class='btn button-next' name='next' value='Next' />
                        @*<input type='button' class='btn button-last' name='last' value='Last' />*@
                    </div>
                    <div style="float:left">
                        @*<input type='button' class='btn button-first' name='first' value='First' />*@
                        <input type='button' class='btn button-previous' name='previous' value='Previous' />
                    </div>
                    @*<li class="previous first" style="display:none;"><a href="#">First</a></li>
                    <li class="previous"><a href="#">Previous</a></li>
                    <li class="next last" style="display:none;"><a href="#">Last</a></li>
                    <li class="next"><a href="#">Next</a></li>*@
                @*</ul>*@
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap-wizard/1.2/jquery.bootstrap.wizard.min.js"></script>
    <script src="~/Scripts/app.order.js" type="text/javascript"></script>
}



